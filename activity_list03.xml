<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.junghee.zorzima.MainActivity">



    <TextView
        android:id="@+id/textView_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="100명이 조르기 중!"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/imageView_item"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_weight="0.45"
        android:src="@drawable/banana" />

    <ImageView
        android:id="@+id/imageView_logo"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_weight="0.08"
        android:src="@drawable/gs_logo" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="빙그레) 바나나우유 240ml"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="8pt" />

    <TextView
        android:id="@+id/textView_detail"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:text="1,300원"
        android:textAlignment="center"
        android:layout_gravity="right"
        android:textColor="#FF0000"
        android:textSize="9pt" />


    <Button
        android:id="@+id/ad_button"
        android:layout_width="219dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:background="#E5CCFF"
        android:onClick="ad_Click"
        android:text="조르지마"
        android:textColor="#FFFFFF"
        android:textSize="12pt"
        android:layout_marginTop="15dp"/>



</LinearLayout>
